@model IEnumerable<APS.Data.Models.User>

@{
    ViewData["Title"] = "Lista de Usuarios";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Lista de Usuarios</h2>
    <a href="@Url.Action("Create")" class="btn btn-primary mb-3">Agregar Nuevo Usuario</a>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Tabla de Usuarios
        </div>

        <a class="btn-IA-Tecnico" asp-controller="TecnicoIA" asp-action="Index">
            <i class="fas fa-robot"></i>
        </a>

        <div class="card-body">
            <table class="table table-striped table-hover" id="TablaUsuarios">
                <thead class="thead-dark">
                    <tr>
                        <th>Nombre de Usuario</th>
                        <th>Correo Electrónico</th>
                        <th>Fecha de Registro</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>@user.CreatedAt</td>
                            <td>
                                <a href="@Url.Action("Details", new { id = user.UserId })" class="btn btn-info btn-sm">Detalles</a>
                                <a href="@Url.Action("Edit",  new { id = user.UserId })" class="btn btn-warning btn-sm">Editar</a>
                                <a href="@Url.Action("Delete", new { id = user.UserId })" class="btn btn-danger btn-sm">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
