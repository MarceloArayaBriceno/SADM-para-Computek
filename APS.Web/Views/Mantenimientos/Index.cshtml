@model IEnumerable<APS.Data.Models.Producto>
@{
    Layout = "~/Views/Shared/_ClienteLayout.cshtml";
    ViewData["Title"] = "Inicio Tienda";
}

@{
    ViewData["Title"] = "Mantenimientos";
}

<div class="container my-5">
    <h2 class="text-center" style="color: #0dcaf0; font-weight: bold;">Nuestros Servicios de Mantenimiento</h2>
    <p class="text-center mt-3" style="font-size: 18px; color: #0dcaf0;">
        En la empresa realizamos mantenimiento, reparaciones e instalaciones a domicilio o de manera remota en caso de que sea posible. Ofrecemos soluciones rápidas a la puerta de su casa o trabajo, y damos <strong>3 meses de garantía</strong> por cada trabajo que realizamos.
    </p>

    <!-- Grid de servicios -->
    <div class="row mt-5 row-md-4">
        <!-- Servicio 1 -->
        <div class="col-md-4 mb-4">
            <div class="card shadow" style="border: none; ">
                
                    <img src="/img/home2.jpg" class="card-img-top" alt="Mantenimiento Completo" style="height: 400px;">
               
                <div class="card-body text-center">
                    <h5 class="card-title" >Mantenimiento Completo</h5>
                    <p class="card-text" >₡25,000</p>
                </div>
            </div>
        </div>

        <!-- Servicio 2 -->
        <div class="col-md-4 mb-4">
            <div class="card shadow" style="border: none;">
               
                    <img src="/img/home1.jpg" class="card-img-top" alt="Mantenimiento de GPU" style="height: 400px;">
               
                <div class="card-body text-center" >
                    <h5 class="card-title" >Mantenimiento GPU</h5>
                    <p class="card-text" >₡35,000 - ₡45,000</p>
                </div>
            </div>
        </div>

        <!-- Servicio 3 -->
        <div class="col-md-4 mb-4">
            <div class="card shadow" style="border: none;">
                
                    <img src="/img/home7.jpg" class="card-img-top" alt="Mantenimiento Laptop" style="height: 400px;">

                <div class="card-body text-center" >
                    <h5 class="card-title" >Mantenimiento Laptop</h5>
                    <p class="card-text" >₡20,000</p>
                </div>
            </div>
        </div>
    </div>
</div>
