@model IEnumerable<APS.Data.Models.Producto>
@{
    Layout = "~/Views/Shared/_ClienteLayout.cshtml";
    ViewData["Title"] = "Inicio Tienda";

}
<style>
    .card {
        height: 100%; /* Asegura que las tarjetas tengan la misma altura */
        display: flex;
        flex-direction: column;
        justify-content: space-between; /* Alinea los elementos verticalmente */
        text-align: center;
    }

    .card-img-top {
        object-fit: contain; /* Ajusta la imagen sin distorsión */
        height: 200px; /* Altura fija para imágenes */
        width: 100%; /* Ajusta el ancho */
        padding: 10px; /* Espacio interno para las imágenes */
    }

    .card .accordion-body {
        flex-grow: 1; /* Permite que el contenido crezca para ajustar las tarjetas */
        padding: 20px; /* Espacio interno consistente */
    }

    h5.fw-bolder {
        min-height: 50px; /* Asegura un espacio fijo para el título */
        display: flex;
        align-items: center;
        justify-content: center;
    }

    p {
        margin: 0 0 10px; /* Consistencia en los márgenes */
    }

        p:last-child {
            font-weight: bold; /* Resalta el precio */
            color: #333; /* Color distintivo */
        }

</style>
<!-- Header-->
<body>
    <header class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Computek</h1>
                <p class="lead fw-normal text-white-50 mb-0">With this shop hompeage template</p>
            </div>
        </div>
    </header>

    <!-- Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                @foreach (var producto in Model)
                {
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Imagen del producto -->
                            <img class="card-img-top" src="@producto.RutaImagen" alt="@producto.Nombre" />

                            <!-- Información del producto -->
                            <div class="card accordion-body p-4">
                                <div class="text-center">
                                    <!-- Título del producto -->
                                    <h5 class="fw-bolder">@producto.Nombre</h5>
                                    <!-- Descripción -->
                                    <p>@producto.Descripcion</p>
                                    <!-- Precio -->
                                    <p>₡ @producto.Precio</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

</body>